{{>header}}


<link rel="stylesheet" href="/css/noticeDetail.css">
<!-- 레이아웃 -->
<div class="layout">
    <!-- 사이드바 -->
    <aside class="sidebar">
        <a href="/board/noticeList?id={{subjectId}}" class="active">공지사항</a>
        <a href="/board/summaryList?id={{subjectId}}">수업요약</a>
        <a href="/board/testList?id={{subjectId}}">시험</a>
        <a href="/board/freeList?id={{subjectId}}">자유게시판</a>
    </aside>
    <!-- 메인 콘텐츠 -->
    <div class="main-content">
        <div class="notice-container">
            {{#notice}}
            <div class="notice-row">
                <div class="notice-item notice-title">{{title}}</div>
                <div class="notice-item notice-author">{{author}}</div>
                <div class="notice-item notice-date">{{created}}</div>
                <div class="notice-item notice-views">{{views}}</div>

            </div>
            <div style="width: 100%;height: 100%;background-color: white;margin-top:20px;padding: 15px; min-height: 65vh;border-radius: 10px; white-space: pre-line;">
                {{notice}}
            </div>
            {{/notice}}
            {{#fileExists}}
                <div id="file-download-container" style="margin-top:20px;margin-right: 5px;margin-left: 5px;background-color: white;padding: 10px;border: 2px solid #000;border-radius: 20px;box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);">
                    <a href="/board/download?file={{originFilename}}&type=notice" class="download-btn">첨부파일: <strong>{{filename}}</strong></a>
                </div>
            {{/fileExists}}
            {{#author}}
            <div class="button-container-bottom">
                <button class="write-button" style="margin: 10px;" onclick="deletePost({{notice.id}}, '{{subjectId}}')">
                    삭제하기
                </button>
                <button class="write-button" style="margin: 10px;" onclick="navigateTo('/board/notice/update?id={{subjectId}}&num={{notice.id}}')">
                    수정하기
                </button>
            </div>
            {{/author}}
        </div>
    </div>
</div>

<script>
    function navigateTo(url) {
        window.location.href = url; // 클릭 시 URL로 이동
    }

    function deletePost(postId, subjectId) {
        if (confirm("정말 삭제하시겠습니까?")) {
            fetch(`/board/notice/delete?num={{notice.id}}`, {
                method: "DELETE"
            }).then(response => {
                if (response.ok) {
                    alert("삭제 완료!");
                    window.location.href = `/board/noticeList?id={{subjectId}}`;
                } else {
                    alert("삭제 실패");
                }
            }).catch(error => console.error("Error:", error));
        }
    }
</script>
{{>footer}}

