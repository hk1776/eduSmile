{{>header}}



<link rel="stylesheet" href="/css/noticeOriginal.css">
<body>
<!-- 레이아웃 -->
<div class="layout">
    <!-- 사이드바 -->
    <aside class="sidebar">
        <a href="/notice" class="active">공지사항</a>
        <a href="/assignments">과제/준비물</a>
        <a href="/class-summary">수업요약</a>
        <a href="/exams">시험</a>
        <a href="/free-board">자유게시판</a>
    </aside>

    <!-- 메인 콘텐츠 -->
    <div class="main-content">
        <div class="notice-container">
            <div class="notice-header">
                <h1>공지사항</h1>
            </div>

            <table class="notice-table">
                <thead>
                    <tr>
                        <th>제목</th>
                        <th>작성자</th>
                        <th>작성일</th>
                        <th>조회수</th>
                    </tr>
                </thead>
                <tbody>
                    {{#notices}}
                    <tr>
                        <td><a href="/notice/{{id}}" style="text-decoration: none; color: inherit;">{{title}}</a></td>
                        <td>{{author}}</td>
                        <td>{{date}}</td>
                        <td>{{views}}</td>
                    </tr>
                    {{/notices}}
                    {{^notices}}
                    <tr>
                        <td colspan="4" style="text-align: center;">등록된 공지사항이 없습니다.</td>
                    </tr>
                    {{/notices}}
                </tbody>
            </table>

            <!-- 페이지네이션 -->
            <div class="pagination-container">
                <div class="pagination-group">
                    <a href="/notice?page={{prevPage}}" class="pagination">◀ 이전</a>
                    {{#pages}}
                        <a href="/notice?page={{page}}" class="pagination {{#isActive}}active{{/isActive}}">{{page}}</a>
                    {{/pages}}
                    <a href="/notice?page={{nextPage}}" class="pagination">다음 ▶</a>
                </div>

                <!-- 글쓰기 버튼 -->
                <a href="/notice/write" class="write-button">글쓰기</a>
            </div>
        </div>
        {{>footer}}
    </div>
</div>

</body>

