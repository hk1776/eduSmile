{{>header}}

<link rel="stylesheet" href="/css/borderList.css">

<!-- 레이아웃 -->
<div class="layout">
    <!-- 사이드바 -->
    <aside class="sidebar">
        <a href="/board/noticeList?id={{subjectId}}">공지사항</a>
        <a href="/board/summaryList?id={{subjectId}}"class="active">수업요약</a>
        <a href="/board/testList?id={{subjectId}}">시험</a>
        <a href="/board/freeList?id={{subjectId}}">자유게시판</a>
    </aside>
    <!-- 메인 콘텐츠 -->
    <div class="main-content">
        <div class="notice-container">
            <div class="notice-header">
                <h1>수업요약</h1>
            </div>

            <table class="notice-table">
                <thead>
                <tr>
                    <th>제목</th>
                    <th>작성자</th>
                    <th>작성일</th>
                    <th>조회수</th>
                </tr>
                </thead>
                <tbody>
                {{#summaryPage.content}}
                    <tr onclick="navigateTo('/board/summary?id={{subjectId}}&num={{id}}')">
                        <td>{{title}}</a></td>
                        <td>{{author}}</td>
                        <td>{{created}}</td>
                        <td>{{views}}</td>
                    </tr>
                {{/summaryPage.content}}
                {{^summaryPage.content}}
                    <tr>
                        <td colspan="4" style="text-align: center;">등록된 수업요약이 없습니다.</td>
                    </tr>
                {{/summaryPage.content}}
                </tbody>
            </table>

            <div class="pagination-container">
                <div class="pagination-group">
                    {{#prevPageNum}}
                        <a class="pagination" href="/board/summaryList?id={{subjectId}}&page={{prevPageNum}}">◀ 이전</a>
                    {{/prevPageNum}}

                    {{#pageNums}}
                        <a class="pagination" href="/board/summaryList?id={{subjectId}}&page={{.}}">
                        {{.}}
                        </a>
                    {{/pageNums}}

                    {{#nextPageNum}}
                        <a class="pagination" href="/board/summaryList?id={{subjectId}}&page={{nextPageNum}}">다음 ▶</a>
                    {{/nextPageNum}}
                </div>

            </div>
        </div>
    </div>
</div>

<script>
    function navigateTo(url) {
        window.location.href = url; // 클릭 시 URL로 이동
    }
</script>
{{>footer}}

