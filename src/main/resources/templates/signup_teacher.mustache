<script>

    function validateForm() {
        let isValid = true;
        //아이디 유효성
        var id = document.getElementById("LoginId").value;
        var idregex = /^(?![0-9]{6,12}$)[a-zA-Z0-9-_]{6,14}$/; //정규식 // 6-14자 영문, 숫자, 기호(-, _)만 허용 //숫자만은 불가
        var iderrorMessage = document.getElementById("idError");

        if (!idregex.test(id)) {
            iderrorMessage.style.display = "block"; // 에러
            isValid = false;
        } else {
            iderrorMessage.style.display = "none"; // 에러 x
        }


        //비번 유효성
        var password = document.getElementById("password").value;
        var passwordregex = /^(?!\d)(?=[a-zA-Z0-9~․!@#$%^&*()_\-+=\[\]{}|\\;:'"<>,.?/]*[~․!@#$%^&*()_\-+=\[\]{}|\\;:'"<>,.?/])[a-zA-Z0-9~․!@#$%^&*()_\-+=\[\]{}|\\;:'"<>,.?/]{6,15}$/ ; //비밀번호는 6-15자의 영문, 숫자, 특수문자만 사용 가능합니다.(숫자로 시작 불가) //

        var passworderrorMessage = document.getElementById("passwordError");

        if (!passwordregex.test(password)) {
            passworderrorMessage.style.display = "block"; // 에러
            isValid = false;
        } else {
            passworderrorMessage.style.display = "none"; // 에러 x
        }

        //비번 재확인 유효성
        var samepassword = document.getElementById("samepassword").value;

        var SamepassworderrorMessage = document.getElementById("SamepasswordError");

        if (password != samepassword) {
            SamepassworderrorMessage.style.display = "block"; // 에러
            isValid = false;
        } else {
            SamepassworderrorMessage.style.display = "none"; // 에러 x
        }

        //이름 유효성
        var name = document.getElementById("name").value;
        var nameregex =/^[a-zA-Z]+$|^[가-힣]+$/; //한글로만 또는 영어로만 // 숫자 x
        var nameerrorMessage = document.getElementById("nameError");

        if (!nameregex.test(name)) {
            nameerrorMessage.style.display = "block"; // 에러
            isValid = false;
        } else {
            nameerrorMessage.style.display = "none"; // 에러 x
        }

        //전화번호 유효성
        var phone = document.getElementById("phoneNumber").value;
        var phoneregex =/^\d*$/; // 숫자와 - 만 사용 - 연속이나 맨앞 불가
        var phoneerrorMessage = document.getElementById("phoneError");

        if (!phoneregex.test(phone)) {
            phoneerrorMessage.style.display = "block"; // 에러
            isValid = false;
        } else {
            phoneerrorMessage.style.display = "none"; // 에러 x
        }

        const checkbox1 = document.getElementById("checkbox1");
        const checkbox2 = document.getElementById("checkbox2");
        //  체크박스 확인
        if (!checkbox1.checked || !checkbox2.checked) {
            isValid = false;
        }
        // 모든 검사를 통과해야 제출 가능
        document.getElementById("submitButton").disabled = !isValid;
        return isValid;
    }

</script>

