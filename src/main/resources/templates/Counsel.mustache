{{>header}}



<link rel="stylesheet" href="/css/Counsel.css">
<body>
<!-- 레이아웃 -->
<div class="layout">
    <!-- 사이드바 -->
    <aside class="sidebar">
        <a href="CounselList" class="active">상담내역</a>
        {{#teacher}}
        <div class="side-box">

            {{#my_students}}
            <button type="button" class="student_list"><span>{{name}}</span></button>
            {{/my_students}}

        </div>
        {{/teacher}}
    </aside>

    <!-- 메인 콘텐츠 -->
    <div class="main-content">
        <div class="notice-container">
            <div class="notice-header">
                <h1>상담내역</h1>
            </div>

            <table class="notice-table">
                <thead>
                    <tr>
                        <th>제목</th>
                        <th>작성자</th>
                        <th>작성일</th>
                        <th>조회수</th>
                    </tr>
                </thead>
                <tbody>
                    {{#notices}}
                    <tr>
                        <td><a href="CounselList/{{id}}" style="text-decoration: none; color: inherit;">{{title}}</a></td>
                        <td>{{author}}</td>
                        <td>{{date}}</td>
                        <td>{{views}}</td>
                    </tr>
                    {{/notices}}
                    {{^notices}}
                    <tr>
                        <td colspan="4" style="text-align: center;">등록된 공지사항이 없습니다.</td>
                    </tr>
                    {{/notices}}
                </tbody>
            </table>

            <!-- 페이지네이션 -->
            <div class="pagination-container">
                <div class="pagination-group">
                    <a href="/CounselList?page={{prevPage}}" class="pagination">◀ 이전</a>
                    {{#pages}}
                        <a href="/CounselList?page={{page}}" class="pagination {{#isActive}}active{{/isActive}}">{{page}}</a>
                    {{/pages}}
                    <a href="/CounselList?page={{nextPage}}" class="pagination">다음 ▶</a>
                </div>

                <!-- 글쓰기 버튼 -->
                <a href="/CounselList/write" class="write-button">글쓰기</a>
            </div>
        </div>
        {{>footer}}
    </div>
</div>

</body>

