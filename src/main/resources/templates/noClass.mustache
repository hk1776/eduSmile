{{>header}}
<style>
    #backDiv {
        margin-top: 10px;
        width: 50%;
        background-color: #FFFEFD;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        padding: 20px;
        cursor: pointer;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .message {
        font-family: Score5;
        font-size: 24px;
        margin-bottom: 15px;
    }

    .class-form {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
    }

    .input-group {
        display: flex;
        align-items: center;
        gap: 10px; /* input과 버튼 간격 조정 */
        justify-content: center; /* 중앙 정렬 */
        width: 100%; /* 부모 요소 기준으로 정렬 */
    }

    .input-field {
        width: 30%;
        padding: 10px;
        font-size: 16px;
        border: 2px solid #ccc;
        border-radius: 8px;
        text-align: center;
        outline: none;
    }

    .input-field:focus {
        border-color: #F19B2A;
        box-shadow: 0 0 5px rgba(241, 155, 42, 0.5);
    }

    .submit-btn {
        padding: 10px 20px;
        font-size: 16px;
        background-color: #F19B2A;
        color: white;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: 0.3s;
    }

    .submit-btn:hover {
        background-color: #D9831E;
    }
</style>

<div id="back_ground">
    <div id="backDiv" class="item">
        <img style="width: 20%;" src="/images/_1.png" alt="" />
        <p class="message">학급 정보가 없는 회원입니다.</p>
        <p class="message">원활한 서비스 사용을 위해 반 코드를 등록해 주세요!</p>
        <form id="classForm" action="/submitClass" method="POST" class="class-form">
            <div class="input-group">
                <input type="text" id="classId" name="classId" class="input-field" required>
                <button type="submit" class="submit-btn">전송</button>
            </div>
            <input type="hidden" name="memberId" value="{{member.id}}">
        </form>
    </div>
</div>
<script>
    document.getElementById("classForm").addEventListener("submit", async function(event) {
        event.preventDefault(); // 기본 제출 방지

        const classId = document.getElementById("classId").value.trim();
        const formData = new FormData(this);

        // 서버로 AJAX 요청 보내기
        try {
            const response = await fetch(this.action, {
                method: "POST",
                body: formData
            });

            const result = await response.json(); // JSON 응답 받기

            if (!response.ok) {
                throw new Error(result.message || "반 코드가 유효하지 않습니다.");
            }

            alert("반 코드가 성공적으로 등록되었습니다!");
            window.location.href = "/home"; // 성공 시 페이지 이동 (필요하면 변경)

        } catch (error) {
            alert(error.message); // 오류 메시지 출력
        }
    });
</script>
