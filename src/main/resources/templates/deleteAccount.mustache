<style>
    ._039,
    ._039 * {
        box-sizing: border-box;
    }
    ._039 {
        background: #fcf2d4;
        height: 100vh;
        position: relative;
        overflow: hidden;
    }
    .main-box{
        position: relative;
        background-color: #FFFFFF;
        left:27.5vw;
        top:20vh;
        width:45vw;
        height:50vh;
        border: 1px solid #000000;
    }
    .warn1{
        position: relative;
        left:2vw;
        top:10vh;
        font-size: 1.2vw;
        width:50vw;
        font-family: Score5;
    }
    .warn2{
        position: relative;
        left:2vw;
        top:20vh;
        font-size: 1.2vw;
        width:50vw;
        font-family: Score5;
    }
    .warn3{
        position: relative;
        left:2vw;
        top:30vh;
        font-size: 1.2vw;
        width:50vw;
        font-family: Score5;
    }
    .check{
        position: relative;
        left:67vw;
        top:22vh;
        font-size: 1vw;
        width:50vw;
        transform: scale(1.5);
        font-family: Score6;
    }
    .title{
        position: relative;
        left:40vw;
        top:15vh;
        font-size: 1.5vw;
        width:50vw;
        transform: scale(1.5);
        font-family: Score6;
    }
    .submitbtn{
        text-decoration: none; /* 밑줄 제거 */
        position: relative;
        background-color: #F19B2A;
        color: white;
        border: none;
        padding: 5px 25px;
        border-radius: 30px;
        text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25); /* 그림자 효과 */
        box-shadow: inset 0 0 0 5px #576096;
        cursor: pointer;
        height: 8vh;
        width:10vw;
        font-family: Score5;
        left:44vw;
        top:27vh;
        font-size:1.2vw;
    }
</style>

<body>
<div class="_039" style="position: relative">
    <div class="title">회원 탈퇴 동의서</div>
    <div class="main-box">
        <div class="warn1">1. 사용중인 아이디(qwer1234)는 탈퇴 시 재사용 및 복구가 불가능합니다.</div>
        <div class="warn2">2. 탈퇴시 해당 아이디와 관련된 모든 정보가 삭제됩니다</div>
        <div class="warn3">3. 교사 계정의 경우 해당 반의 학생들의 반 정보가 모두 삭제 됩니다.</div>
    </div>
    <div class="check">
    <input type="checkbox" id="agree" name="agree" class="agree">
    <label for="agree">회원 탈퇴에 동의합니다</label>
    </div>
    <button type="button" class="submitbtn">회원 탈퇴</button>
</div>

</body>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const checkbox = document.getElementById("agree");
        const button = document.querySelector(".submitbtn");


        button.disabled = true;
        button.style.opacity = "0.5";
        button.style.cursor = "not-allowed";


        checkbox.addEventListener("change", function () {
            if (checkbox.checked) {
                button.disabled = false;
                button.style.opacity = "1";
                button.style.cursor = "pointer";
            } else {
                button.disabled = true;
                button.style.opacity = "0.5";
                button.style.cursor = "not-allowed";
            }
        });


        button.addEventListener("click", function () {
            if (!checkbox.checked) {
                alert("회원 탈퇴에 동의해야 합니다.");
                return;
            }


            const isConfirmed = confirm("정말 회원 탈퇴를 하시겠습니까?");
            if (!isConfirmed) return; // 취소 버튼 클릭 시 종료


            fetch("/trueDeleteAccount", {  // 백엔드 URL 변경 가능
                method: "GET",
            })
                    .then(response => response.text()) // 응답을 텍스트로 받음
                    .then(data => {
                        console.log("서버 응답:", data); // 콘솔에서 응답 확인

                        if (data === "ok") { // 백엔드에서 "ok"를 반환하므로 이렇게 체크
                            alert("회원 탈퇴가 완료되었습니다.");
                            window.location.href = "/"; // 홈 화면으로 이동 (필요하면 변경)
                        } else {
                            alert("회원 탈퇴에 실패했습니다. 다시 시도해주세요.");
                        }
                    })
                    .catch(error => {
                        console.error("오류 발생:", error);
                        alert("서버 오류가 발생했습니다.");
                    });
        });
    });
</script>


